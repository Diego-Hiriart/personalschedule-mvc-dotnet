@model IEnumerable<Hiriart_Corales_MVCWebApp_AgendaPersonal.Models.Serie>

@{
    ViewBag.Title = "Índice";
}

<h2>Índice</h2>

<p>
    @Html.ActionLink("Nueva serie", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.TextBox("Titulo")
    <input type="submit" value="Buscar" />
}
<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Eventos de la serie
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.SerieID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.SerieID }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.SerieID })
            </td>
        </tr>
    }

</table>

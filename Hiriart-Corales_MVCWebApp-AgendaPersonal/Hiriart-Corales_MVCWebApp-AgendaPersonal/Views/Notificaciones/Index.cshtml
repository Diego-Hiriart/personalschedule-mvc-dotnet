@model IEnumerable<Hiriart_Corales_MVCWebApp_AgendaPersonal.Models.Notificacion>

@{
    ViewBag.Title = "Índice";
}

<h2>Índice</h2>

<p>
    @Html.ActionLink("Nueva notificación", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.TextBox("Titulo")
    <input type="submit" value="Buscar" />
}
<table class="table">
    <tr>
        <th>
            Evento
        </th>
        <th>
            Hora (hh/mm/ss)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora.TimeOfDay)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.NotificacionID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.NotificacionID }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.NotificacionID })
            </td>
        </tr>
    }

</table>

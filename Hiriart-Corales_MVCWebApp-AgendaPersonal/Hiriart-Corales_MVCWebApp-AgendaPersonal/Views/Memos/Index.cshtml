@model IEnumerable<Hiriart_Corales_MVCWebApp_AgendaPersonal.Models.Memo>

@{
    ViewBag.Title = "Índice";
}

<h2>Índice</h2>

<p>
    @Html.ActionLink("Nuevo memo", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.TextBox("Contenido")
    <input type="submit" value="Buscar" />
}
<table class="table">
    <tr>
        <th>
            Contenido
        </th>
        <th>
            Evento
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.MemoID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.MemoID }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.MemoID })
            </td>
        </tr>
    }

</table>

@model Hiriart_Corales_MVCWebApp_AgendaPersonal.Models.Diario

@{ 
    ViewBag.Title = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Está seguro de que desea borrar esto?</h3>
<div>
    <h4>Diario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha
        </dt>

        <dd>
            @Model.Fecha.ToShortDateString()
        </dd>

        <dt>
            Contenido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contenido)
        </dd>
        <dt>
            Eventos relacionados
        </dt>
        <dd>
            @Html.ListBox("ListaEventoID", null, htmlAttributes: new { @class = "form-control" })
        </dd>

    </dl>

    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        @Html.ActionLink("Volver", "Index")
    </div>
        }
</div>
